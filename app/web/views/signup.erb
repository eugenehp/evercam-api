<div class='col-xs-8 col-xs-offset-2'>
  <h1>Sign Up</h1>
  <form method="POST" role="form">

    <div class="form-group">
      <div class="form-inline">
        <div class="form-group col-xs-6">
          <label for="forename">Forename</label>
          <input class="form-control" name="forename" placeholder="Forename" type="text"></input>
        </div>
        <div class="form-group col-xs-6">
          <label for="lastname">Lastname</label>
          <input class="form-control" name="lastname" placeholder="Lastname" type="text"></input>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="country">Country</label>
      <select class="form-control">
        <option></option>
        <% @countries.each do |country| %>
          <option value="<%= country.pk %>">
          <%= country.name %>
          </option>
        <% end %>
      </select>
    </div>

    <div class="form-group">
      <label for="username">Username</label>
      <input class="form-control" name="username" placeholder="Username" type="text"></input>
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input class="form-control" name="email" placeholder="Email" type="text"></input>
    </div>

    <input class="btn btn-primary pull-right" type="submit" value="Sign up"></input>

  </form>
</div>

