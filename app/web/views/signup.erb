<% @title = 'Signup' %> 
<div class='col-xs-8 col-xs-offset-2'>
  <h1>Sign Up</h1>
  <form method="POST" role="form">

    <div class="form-group">
      <div class="form-inline">
        <div class="form-group col-xs-6">
          <label for="forename">Forename</label>
          <%= input(:forename, :text, :required, placeholder: 'Forename') %>
        </div>
        <div class="form-group col-xs-6">
          <label for="lastname">Lastname</label>
          <%= input(:lastname, :text, :required, placeholder: 'Lastname') %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="country">Country</label>
      <%= select(:country, @countries.map { |c| [c.iso3166_a2, c.name] }, :required) %>
    </div>

    <div class="form-group">
      <label for="username">Username</label>
      <%= input(:username, :text, :required, placeholder: 'Username') %>
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <%= input(:email, :text, :required, placeholder: 'Email') %>
    </div>

    <input class="btn btn-primary pull-right" type="submit" value="Sign up"></input>

  </form>
</div>

