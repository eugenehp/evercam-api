          <div class="addCamera_container">
            <form class="form-horizontal" role="form">
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-3 control-label">Camera Name:</label>
                <div class="col-sm-8">
                  <input type="text" class="form-control" id="inputArea" placeholder="Camera Name">
                </div>
              </div>
                
              <div class="form-group">
                <label for="inputPassword3" class="col-sm-3 control-label">URL or IP:</label>
                <div class="col-sm-8">
                  <input type="text" class="form-control" id="inputArea" placeholder="Public IP / Dydns">
                  <p>e.g. 149.237.190.68 - or - test.dydns.com</p>
                </div>
              </div>
           
              <div class="form-group">
                <label for="inputPassword3" class="col-sm-3 control-label">Credentials:</label>
