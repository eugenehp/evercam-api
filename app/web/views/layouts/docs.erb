  <%= partial 'layouts/_header'.to_sym %>

  <div class='main'>
    <div id='content'>
      <div class='container'>

        <%= partial 'layouts/_flash'.to_sym %>

        <div class='col-sm-2 left-nav'>
          <h1>Documentation</h1>
