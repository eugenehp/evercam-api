          </ul>
        </div>

        <div class='col-sm-10'>
          <%= yield %>
        </div>

      </div>
    </div>
  </div>

  <script>
    $(document).ready(function() {
      $('pre code').each(function(i, e) {
        hljs.highlightBlock(e);
      });

      if (typeof $.cookie('lang') !== 'undefined') {
        $("a[href^='#" + $.cookie('lang') + "'").click();
      }

      $('.nav-pills a').click(function(e) {
        var lang = $(this).text().toLowerCase();
        $.cookie('lang', lang);
        $("a[href^='#" + lang + "'").not(this).tab('show');
      });
    });
  </script>

  <div class='clearfix'>
    &nbsp;
  </div>

  <%= partial 'layouts/_footer'.to_sym %>

</div>
</body>
</html>

